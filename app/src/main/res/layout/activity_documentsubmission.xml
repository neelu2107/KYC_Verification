                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        app:boxStrokeColor="#D16FFF">

                        <AutoCompleteTextView
                            android:id="@+id/document_type"
